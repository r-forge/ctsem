#!/bin/sh

set -o errexit
set -o nounset
set -o noclobber

if [ ! -e ./util/build ]; then
  echo "$0 must be run from the top of the project tree"
  exit
fi

git log --oneline -1
[ -d staging ] && rm -r ./staging
mkdir staging
git archive --format=tar HEAD | (cd staging; tar -xf -)
cd staging

#cp src/Makevars.in src/Makevars

#./util/rox
R CMD build .
